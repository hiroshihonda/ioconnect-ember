<div class="form-group">
    <label for="potential-name">Customer Name</label>
  {{
  input type="text"
  value=model.potentialName
  class="form-control input-sm"
  name="potential-name"
  placeholder="Potential Name"
  }}
</div>
<div class="form-group">
    <label for="potential-address">Address</label>
  {{
  input type="text"
  value=model.address
  class="form-control input-sm"
  name="potential-address"
  placeholder="Address"
  }}
</div>

<div class="form-group">
    <label>{{setOptions.leadSource.name}}</label>
    {{view "select"
      class="form-control"
      content=setOptions.leadSource.items
      optionValuePath="content.value"
      optionLabelPath="content.value"
      value=model.leadSource
      prompt="Select a lead source"
    }}
</div>
<div class="form-group">
    <label>{{setOptions.leadStatus.name}}</label>
    {{view "select"
      class="form-control"
      content=setOptions.leadStatus.items
      optionValuePath="content.value"
      optionLabelPath="content.value"
      value=model.leadStatus
      prompt="Select a lead status"
    }}
</div>
<div class="form-group">
    <label for="potential-utility">Utility</label>
  {{
  input type="text"
  value=model.utility
  class="form-control input-sm"
  name="potential-utility"
  placeholder="Utility"
  }}
</div>
<div class="form-group">
    <label for="potential-rateSchedule">Rate Schedule</label>
  {{
  input type="text"
  value=model.rateSchedule
  class="form-control input-sm"
  name="potential-rateSchedule"
  placeholder="Rate Schedule"
  }}
</div>
<div class="form-group">
    <label for="potential-averageBill">Average Bill</label>
  {{
  input type="text"
  value=model.averageBill
  class="form-control input-sm"
  name="potential-averageBill"
  placeholder="Average Bill"
  }}
</div>
<div class="form-group">
    <label for="potential-anualUsage">Annual Usage</label>
  {{
  input type="text"
  value=model.annualUsage
  class="form-control input-sm"
  name="potential-anualUsage"
  placeholder="Annual Usage"
  }}
</div>

<div class="form-group">
    <button type="submit" class="btn btn-primary" {{action "savePotential" }}>Save</button>
</div>